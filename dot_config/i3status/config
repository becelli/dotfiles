general {
	output_format = "i3bar"
        colors = true

        #gruvbox
	interval = 1
	color_good = "#88a828"
	color_degraded = "#d7af5f"
	color_bad = "#d75f5f"
        
        # dracula
        # color_good = "#50FA7B"
        # color_degraded = "#F1FA8C"
        # color_bad = "#FF5555"
}


# order += "read_file BRIGHTNESS"
order += "load"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

volume master {
        format = "🔊 %volume"
        format_muted = "🔇 muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}


read_file BRIGHTNESS {
       path = "/sys/class/backlight/intel_backlight/brightness"
        format = "🔆 %percentage"

}

cpu_usage {
        format = "🤖 %percentage"
        max_threshold = 75
}

cpu_usage {
        format= "🚀 %usage"
        max_threshold= 75
}



wireless _first_ {
#        format_up = "🦆%quality at %essid at %bitrate"
	format_up = "📡%quality at %essid"
        format_down = ""
}

ethernet _first_ {
#        format_up = "E ️️️️️️%ip (%speed)"
	format_up = "🔌 ️%ip"
        format_down = ""
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = "%status %percentage"
        status_full = "🔋"
        status_chr = "⚡"
        status_bat = "⚡"
        status_unk = "⚡"
        format_down = ""
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
#        format = "💻 %1min | %5min | %15min"
#	 format = "💻 %1min | %5min"
	 format = "💻 %1min"
}

memory {
        format = "🐸 %percentage_used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "💾 %percentage_used"
}

# home
disk "/home" {
        format = "🏠 %percentage_used"
}
