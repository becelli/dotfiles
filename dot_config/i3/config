# font pango:FantasqueSansM Nerd Font 15
font pango:Google Sans Code NF 12
default_border pixel 2
default_floating_border pixel 1

# include ~/.config/i3/themes/rose-pine-moon.theme

set $base           #232136
set $surface        #2a273f
set $overlay        #393552
set $muted          #6e6a86
set $subtle         #908caa
set $text           #e0def4
set $love           #eb6f92
set $gold           #f6c177
set $rose           #ea9a97
set $pine           #3e8fb0
set $foam           #9ccfd8
set $iris           #c4a7e7
set $highlightlow   #2a283e
set $highlightmed   #44415a
set $highlighthigh  #56526e

# Teming border and Windows --------------
# target                 title     bg    text   indicator  border
client.focused           $rose     $pine $text  $rose      $rose
client.focused_inactive  $text     $base $text  $subtle    $surface
client.unfocused         $text     $base $text  $overlay   $overlay
client.urgent            $text     $base $text  $love      $love
client.placeholder       $base     $base $text  $overlay   $overlay
client.background        $base

bar {
  position top
  tray_output primary
  tray_padding 2 
  separator_symbol "|"
  status_command i3status -c ~/.config/i3status/config.conf

  colors {
    background $base
    statusline $text
    separator $highlightmed

    focused_workspace  $highlighthigh $pine $text
    active_workspace  $highlighthigh $highlightmed $text
    inactive_workspace $highlightlow $base $text
    urgent_workspace   $base $love $text
    binding_mode      $surface $love $text
  }
}




